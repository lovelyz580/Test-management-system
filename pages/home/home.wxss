/* pages/home/home.wxss */

page {
  background: #f5f5f5;
}

.homePage {
  width: 100%;
}

.homeTitle {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background: #f5f5f5;
  z-index: 1;
}

.homeTitle image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.scrolltxt {
  padding: 0 20rpx;
}

.marquee_box {
  position: relative;
  color: #333;
  height: 60rpx;
  display: block;
  overflow: hidden;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  font-size: 14px;
  line-height: 60rpx;
}

/* 滚动条 */

.homeContent {
  width: 100%;
  background: #fff;
}

.swiper-tab {
  width: 90%;
  margin: 0 auto;
  border: 1rpx solid #ed1b24;
  border-radius: 10rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #ed1b24;
  font-size: 30rpx;
}

.active {
  color: #fff;
  background: #ed1b24;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

swiper {
  width: 100%;
}

.contentList, .list {
  width: 100%;
}

.list {
  line-height: 50rpx;
}

.listAdress {
  font-size: 30rpx;
}

.people {
  width: 100%;
  display: flex;
  align-items: center;
}

.people view {
  font-size: 30rpx;
  margin-right: auto;
}

.people view text {
  color: #ed1b24;
}

.bidding {
  display: block;
  padding: 5rpx 30rpx;
  background: #ed1b24;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.biddings {
  display: block;
  padding: 5rpx 30rpx;
  background: #797777;
  font-size: 35rpx;
  color: #fff;
  border-radius: 10rpx;
}

.list {
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

/* .list:last-child { 
 margin-bottom: 58rpx; 
}  */

.listTop {
  width: 100%;
  display: flex;
  align-items: center;
}

.listTop view {
  font-size: 30rpx;
  margin-right: auto;
}

.listTop text {
  display: block;
  font-size: 30rpx;
  color: #ed1b24;
}

.listBot {
  font-size: 30rpx;
  color: #999;
}

.btns {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  padding: 20rpx 0;
}

.myRepair {
  width: 90%;
  margin: 0 auto;
  background: #ed1b24;
  font-size: 30rpx;
  color: #fff;
}

.patternTab {
  width: 100rpx;
  height: 100rpx;
  line-height: 30rpx;
  padding: 20rpx;
  font-size: 26rpx;
  position: fixed;
  text-align: center;
  bottom: 150rpx;
  border-radius: 50%;
  left: 20rpx;
  background: #ed1b24;
  color: #fff;
}

.search {
  width: 80%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
  font-size: 30rpx;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  margin-left: 15rpx;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
.page_row {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

/* 搜索 */

.buttonss {
  height: 30px;
  line-height: 30px;
  font-size: 30rpx;
}
