    font-size: 28rpx;
    color: #333333;
    line-height: 1.25rem;
}
.user-agree{
    color: #38cfba;
}

.tips{
    width: 620rpx;
    margin: 50rpx auto 0 auto;
    padding: 20rpx;
    text-align: center;
    background: #f4f5f7;
    border-radius: 8rpx;
}
.tips view{
    margin-top: 5rpx;
}
.agreementinfo{
    margin-top: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-left: 30rpx;
    margin-bottom: 30rpx;
    font-size: 24rpx;
    color: #666;
}

.agreement-text{
    width: 620rpx;
    padding: 20rpx;
    margin: 30rpx auto 0 auto;
    background: #f4f5f7;
}

.btn-box{
    position: fixed;
    bottom: 0;
    left: 0;
