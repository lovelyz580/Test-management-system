/* 图片 */
.photo{
  width: 100%;
  height: 100%;
}
.onPhoto{
  position: relative;
}
.onPhoto image{
  width: 90%;
  height: 400rpx;
  margin:5% auto;
  position: relative;
  left: 5%;
}
.underPhoto{
  position: absolute;
  width: 100%;
  height: 50%;
  background: #3f3066;
  opacity: 0.5;
}

/* 文字 */
.word{
  width: 96%;
