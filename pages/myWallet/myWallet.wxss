/* pages/myWallet/myWallet.wxss */
page{
  background:#f5f5f5;
}
.myWalletPage{
  width:100%;
}
.moneyTop{
  width:100%;
  border-top:1px solid #f5f5f5;
  background:#fff;
  padding-bottom:30rpx;
}
/* 充值 */
.topForwardBtn{
  display: block;
  width:50%;
  margin:0 auto;
  background:#34e009;
  color:#fff;
  outline: none;
  font-size:30rpx;
  margin-bottom: 10rpx;
}

/* 提现 */
.putForwardBtn{
  display: block;
  width:50%;
  margin:0 auto;
  background:#ed1b24;
  color:#fff;
  outline: none;
  font-size:30rpx;
}
.top{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding:20rpx 0;
}
.top text{
  display: block;
  color:#555;
  margin-top:23rpx;
}
.top view{
  font-size:70rpx;
  font-weight: bold;
  margin-left:10rpx;
}
.recordList{
  width:100%;
  background:#fff;
  margin-top:20rpx;
}
.record{
  width:100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:30rpx;
  border-bottom:1px solid #f5f5f5;
}

.record text{
  display: block;
  font-size:35rpx;
  text-align: center;
  color:rgb(185, 30, 30);
}
