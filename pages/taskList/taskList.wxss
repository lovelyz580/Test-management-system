/* pages/taskList/taskList.wxss */
page{
  background:#f5f5f5;
}
.repairTaskPage,.taskList{
  width:100%;
}
.task:first-child{
  margin-top:0;
}
.task{
  width:100%;
  background:#fff;
  border-top:1px solid #f5f5f5;
  margin-top:20rpx;
}
.taskTop{
  width:100%;
  box-sizing: border-box;
  padding:20rpx 30rpx;
  line-height:50rpx;
}
.taskInfo{
  width:100%;
  display: flex;
  align-items: center;
}
.taskLeft{
  display: flex;
  align-items: center;
  margin-right:auto;
}
.taskLeft text{
  display: block;
  font-size:30rpx;
}
.status{
  font-size:30rpx;
}
.taskLeft view{
  font-size:30rpx;
}
.taskBot{
  width:100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:15rpx 30rpx;
  border-top:1px solid #f5f5f5;
}
.left{
  margin-right:auto;
}
.right{
  display: flex;
  align-items:center;
}
.right view{
  font-size:30rpx;
  width:150rpx;
  border:1px solid #ed1b24;
  padding:10rpx 0;
  color:#ed1b24;
  text-align: center;
  border-radius: 10rpx;
  margin-right:30rpx;
}
.right text{
  display: block;
  padding:10rpx 45rpx;
  border:1px solid #888888;
  border-radius: 10rpx;
  font-size:30rpx;
  color:#888888;
}