.footer {
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.footLeft {
  display: flex;
  align-items: center;
  margin-right: auto;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.footLeft text {
  display: block;
  font-size: 35rpx;
}

.footLeft  view {
  font-size: 35rpx;
  color: #ed1b24;
}

.footRight {
  padding: 30rpx 40rpx;
  background: #ed1b24;
