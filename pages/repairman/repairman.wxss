/* 公告 */
/* 滚动条 */
page {
  background: #f5f5f5;
}



.homeTitle {
  width: 100%;
  padding-left:20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background: #f5f5f5;
  z-index: 1;
}
.homeTitle image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.scrolltxt {
  padding: 0 20rpx;
}

.marquee_box {
  position: relative;
  color: #333;
  height: 60rpx;
  display: block;
  overflow: hidden;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  font-size: 14px;
  line-height: 60rpx;
}

/* 滚动条 */
/* 轮播图 */
.slide-image{
  width: 100%;
}
/* 轮播图 */
.OrderList {
  height: 280rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
}
.ListLeft{
  width: 30%;
  display: inline-block;
  float: left;
}
.ListLeft image{
 width:200rpx;
height:200rpx;
margin-top:20rpx;
}

.ListRight {
  width: 70%;
  display: inline-block;
  float: left;
}
.ListRight text{
  display: block;
  font-size: 30rpx;
  /* width: 500rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 60rpx;
}
.imagesList{
  width: 100%;
}
.bt{
  font-size: 34rpx;
  font-weight: 300;
}