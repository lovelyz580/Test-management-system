page {
  background: #f5f5f5;
}

.priceMaintainPage {
  height: 100%;
  width: 100%;
}

.productPrice {
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 30rpx 20rpx 30rpx;
  border-top: 1px solid #f5f5f5;
  margin-top: 20rpx;
}

.productLeft {
  width: 95%;
  margin-right: auto;
}

.productName {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.productName text {
  display: block;
  font-size: 30rpx;
}

.productName view {
  font-size: 25rpx;
  background: #feedee;
  padding: 5rpx 10rpx;
  color: #ed1b24;
  border-radius: 10rpx;
  margin-left: 15rpx;
}

.productName:nth-child(2) {
  color: #555;
}

.productName text:nth-child(1) {
  width: 23%;
}

.priceMoney {
  display: flex;
  align-items: center;
  color: #555;
  margin-top: 10rpx;
}

.priceMoney text {
  display: block;
  font-size: 30rpx;
}

.priceMoney text:nth-child(2) {
  margin-left: 20rpx;
}

.priceMoney view {
  font-size: 25rpx;
  background: #e5ecf2;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
  color: #557ca3;
}

.productPrice image {
  display: block;
  width: 30rpx;
  height: 30rpx;
}
